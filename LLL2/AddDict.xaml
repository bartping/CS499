<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LLL2.AddDict">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <ContentView>
                <Frame  BackgroundColor="Transparent" Padding="24" CornerRadius="45">
                    <ImageButton Source="lll2"
                                 BackgroundColor="Transparent"
                                 Aspect="AspectFit"
                                 CornerRadius="0"
                                 Clicked="HomeClick"
                             
                                 />
                </Frame>
            </ContentView>
           
            <Entry x:Name="engEntry"
               Placeholder="English" />
            <Entry x:Name="espEntry"
               Placeholder="Spanish" />
            <Button Text="Add to Dictionary"
                Clicked="OnButtonClicked" />

            <Label x:Name="descText" />
            <Button
                VerticalOptions="EndAndExpand"  
                Text ="Back"
                CornerRadius="45"
                BackgroundColor="#2f6fff"
                TextColor="White"
                Padding="16"
                Clicked="DictClick"
            />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LLL2.MainPage">

    <StackLayout  Padding = "10">
        

        <Label Text="Increase your familiarity with a language. Words and things. Take a quiz."
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        <Button     
            Text ="Quiz Me"
            CornerRadius="45"
            BackgroundColor="#2f6fff"
            TextColor="White"
            Padding="16"
            Clicked="QuizClick"
                    />
        <Button
            CornerRadius="45"
            Text ="Dictionary"
            BackgroundColor="#2f6fff"
            TextColor="White"
            Padding="16"
            Clicked="DictClick"
                    />
        <Frame BackgroundColor="Transparent" Padding="16"></Frame>

        <ContentView>

            <Frame  BackgroundColor="Transparent" Padding="24" CornerRadius="45">
                <ImageButton Source="lll2"
                                 BackgroundColor="Transparent"
                                 Aspect="AspectFit"
                                 CornerRadius="0"
                                 />
            </Frame>
        </ContentView>
    </StackLayout>
</ContentPage>
